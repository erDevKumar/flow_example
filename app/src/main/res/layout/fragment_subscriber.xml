<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#383838"
        android:paddingStart="16dp">
        <Button
            android:backgroundTint="#777"
            android:id="@+id/cold_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="32dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Cold"/>
        <TextView
            android:id="@+id/cold_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cold_label"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="32dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text=""/>
        <Button
            android:backgroundTint="#777"
            android:id="@+id/hot_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cold_label"
            android:layout_margin="32dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Hot"/>
        <TextView
            android:id="@+id/hot_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/hot_label"
            app:layout_constraintTop_toBottomOf="@id/cold_value"
            android:layout_margin="32dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text=""/>
        <Button
            android:backgroundTint="#777"
            android:id="@+id/cold_hot_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/hot_label"
            android:layout_margin="32dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="Cold+Hot"/>
        <TextView
            android:id="@+id/cold_hot_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cold_hot_label"
            app:layout_constraintTop_toBottomOf="@id/hot_value"
            android:layout_margin="32dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text=""/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>